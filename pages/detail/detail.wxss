/* pages/detail/detail.wxss */

page {
  background: #ededed;
}

.whiteArea {
  display: flex;
  height: 120px;
  background-color: white;
  margin: 10px;
}

.picArea {
  display: flex;
  margin: 10px;
  align-items: center;
  background-color: #f95743;
  width: 100%;
}

.requestTitle {
  margin: 10px;
  display: -webkit-box;
  font-size: 18px;
  color: white;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.commonContentTitle {
  margin-top: 20px;
  margin-left: 10px;
  font-size: 15px;
}

.commonContentArea {
  height: 40px;
  background-color: white;
  display: flex;
  align-items: center;
  margin-top: 2px;
}

.contentText {
  color: grey;
  margin-left: 12px;
  font-size: 14px;
  margin-right: 12px;
}

/* 文本分别居左局右的布局 */

.towDirectionContentArea {
  padding-top: 5px;
  padding-bottom: 5px;
  background-color: white;
  display: flex;
  justify-content: space-between;
  margin-top: 2px;
  flex-direction: column;
}
