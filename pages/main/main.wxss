/* pages/main/main.wxss */

page {
  background-color: white;
}

.mainList {
}

.requst_container_out {
  width: 100%;
}

.requst_container_in {
  margin-left: 16px;
  margin-right: 16px;
  padding-top: 10px;
  padding-bottom: 10px;
}

.img_left_title {
  height: 12px;
  width: 12px;
}

.txt_requestTitle {
  margin-left: 10px;
}

.requestTitle {
  font-size: 28rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.requestContent {
  font-size: 24rpx;
  color: #9f9f9f;
}

.statusAndID {
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
  justify-content: space-between;
}

.line {
  width: 100%;
  height: 10px;
  background-color: #ededed;
}

.line-top {
  margin-top: 30px;
  width: 100%;
  height: 10px;
  background-color: #ededed;
}

.dataExist {
  position: absolute;
  top: 30vh;
  width: 100%;
  color: #9f9f9f;
  justify-content: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.picker-area {
  background: #dadada;
  display: flex;
  justify-content: center;
  height: 30px;
  position: fixed;
  top: 0;
}

.chose-item {
  width: 50vw;
  text-align: center;
  height: 30px;
}

.chose-item text {
  color: #f7776a;
  font-size: 14px;
  padding: 5px;
}

.chose-item image {
  margin-left: 3px;
  width: 12px;
  height: 12px;
}
